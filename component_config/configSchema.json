{
	"type": "object",
	"title": "Simple SFTP writer",
	"required": [
		"hostname",
		"port",
		"user",
		"#pass",
		"#private_key",
		"path",
		"append_date"
	],
	"properties": {
		"port": {
			"type": "integer",
			"default": 22,
			"title": "SFTP host port",
			"propertyOrder": 20
		},
		"user": {
			"type": "string",
			"title": "SFTP user name",
			"propertyOrder": 30
		},
		"#pass": {
			"type": "string",
			"title": "SFTP password",
			"format": "password",
			"propertyOrder": 40
		},
		"#private_key": {
			"type": "string",
			"format": "textarea",
			"description": "Your SSH private key, including the BEGIN RSA .. part. If used, the password is ignored.",
			"title": "SSH private key",
			"propertyOrder": 50
		},
		"hostname": {
			"type": "string",
			"title": "SFTP host URL",
			"propertyOrder": 10
		},
		"path": {
			"type": "string",
			"title": "Remote destination path",
			"description" : "e.g. /home/user/sftp/",
			"propertyOrder": 60
		},
		"append_date": {
						"type": "number",
						"title": "Append timestamp",
						"description": "Appends timestamp to result file name",
						"propertyOrder": 5200,
						"enum": [
							0,
							1
						],
						"default": 0,
						"options": {
							"enum_titles": [
								"No",
								"Yes"
							]
					}}
	}
}
